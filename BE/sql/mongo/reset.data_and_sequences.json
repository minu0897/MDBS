    {
      "type": "update_many",
      "collection": "accounts",
      "query": {
        "_id": { "$in": [100001, 100002, 100003, 100004, 100005] }
      },
      "update": {
        "$set": {
          "balance": {"$decimal": "100000000"}
        }
      }
